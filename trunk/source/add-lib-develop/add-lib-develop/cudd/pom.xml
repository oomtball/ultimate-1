<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>info.scce</groupId>
        <artifactId>addlib-build-parent</artifactId>
        <version>2.0.20-BETA-SNAPSHOT</version>
        <relativePath>../build-parent/pom.xml</relativePath>
    </parent>

    <artifactId>addlib-cudd</artifactId>

    <name>ADDLib :: CUDD</name>

    <!-- Dependencies -->
    <dependencies>
        <dependency>
            <groupId>info.scce</groupId>
            <artifactId>addlib-api</artifactId>
        </dependency>
        <dependency>
            <groupId>info.scce</groupId>
            <artifactId>addlib-util</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.kohsuke.metainf-services</groupId>
            <artifactId>metainf-services</artifactId>
        </dependency>

        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
        </dependency>
    </dependencies>

    <!-- Build and Plugins -->
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>pl.project13.maven</groupId>
                <artifactId>git-commit-id-plugin</artifactId>
                <version>4.0.0</version>
                <executions>
                    <execution>
                        <id>git-branch-info</id>
                        <goals>
                            <goal>revision</goal>
                        </goals>
                        <phase>initialize</phase>
                    </execution>
                </executions>
                <configuration>
                    <generateGitPropertiesFile>true</generateGitPropertiesFile>
                    <skipPoms>false</skipPoms>
                    <includeOnlyProperties>git.branch</includeOnlyProperties>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.7.0</version>
                <configuration>
                    <compilerArgs>
                        <arg>-h</arg>
                        <arg>${project.build.directory}/native/include</arg>
                    </compilerArgs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-native-sources</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <resources>
                                <resource>
                                    <directory>src/main/cpp</directory>
                                    <filtering>false</filtering>
                                </resource>
                            </resources>
                            <outputDirectory>${project.build.directory}/native</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>build-native-linux-library</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <exec executable="id" failonerror="true" outputproperty="docker.userId">
                                    <arg value="-u"/>
                                </exec>
                                <exec executable="id" failonerror="true" outputproperty="docker.groupId">
                                    <arg value="-g"/>
                                </exec>
                                <copy todir="${project.build.directory}/native-linux-build">
                                    <fileset dir="${project.build.directory}/native" includes="**"/>
                                </copy>
                                <exec executable="docker" failonerror="false">
                                    <arg value="pull"/>
                                    <arg value="registry.gitlab.com/scce/add-lib/crosscompile-linux:${git.branch}"/>
                                </exec>
                                <exec executable="docker" failonerror="true">
                                    <arg value="run"/>
                                    <arg value="--rm"/>
                                    <arg value="-v"/>
                                    <arg value="${project.build.directory}/native-linux-build:/workdir"/>
                                    <arg value="-u=${docker.userId}:${docker.groupId}"/>
                                    <arg value="registry.gitlab.com/scce/add-lib/crosscompile-linux:${git.branch}"/>
                                    <arg value="cmake"/>
                                    <arg value="."/>
                                </exec>
                                <exec executable="docker" failonerror="true">
                                    <arg value="run"/>
                                    <arg value="--rm"/>
                                    <arg value="-v"/>
                                    <arg value="${project.build.directory}/native-linux-build:/workdir"/>
                                    <arg value="-u=${docker.userId}:${docker.groupId}"/>
                                    <arg value="registry.gitlab.com/scce/add-lib/crosscompile-linux:${git.branch}"/>
                                    <arg value="make"/>
                                </exec>
                                <copy file="${project.build.directory}/native-linux-build/libaddlib-cudd.so"
                                      tofile="${project.build.directory}/classes/nativelib/linux/x64/libaddlib-cudd.so"/>
                            </target>
                        </configuration>
                    </execution>
                    <execution>
                        <id>build-native-windows-library</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <exec executable="id" failonerror="true" outputproperty="docker.userId">
                                    <arg value="-u"/>
                                </exec>
                                <exec executable="id" failonerror="true" outputproperty="docker.groupId">
                                    <arg value="-g"/>
                                </exec>
                                <copy todir="${project.build.directory}/native-windows-build">
                                    <fileset dir="${project.build.directory}/native" includes="**"/>
                                </copy>
                                <exec executable="docker" failonerror="false">
                                    <arg value="pull"/>
                                    <arg value="registry.gitlab.com/scce/add-lib/crosscompile-windows:${git.branch}"/>
                                </exec>
                                <exec executable="docker" failonerror="true">
                                    <arg value="run"/>
                                    <arg value="--rm"/>
                                    <arg value="-v"/>
                                    <arg value="${project.build.directory}/native-windows-build:/workdir"/>
                                    <arg value="-u=${docker.userId}:${docker.groupId}"/>
                                    <arg value="registry.gitlab.com/scce/add-lib/crosscompile-windows:${git.branch}"/>
                                    <arg value="cmake"/>
                                    <arg value="."/>
                                    <arg value="-DCMAKE_SYSTEM_NAME=Windows"/>
                                </exec>
                                <exec executable="docker" failonerror="true">
                                    <arg value="run"/>
                                    <arg value="--rm"/>
                                    <arg value="-v"/>
                                    <arg value="${project.build.directory}/native-windows-build:/workdir"/>
                                    <arg value="-u=${docker.userId}:${docker.groupId}"/>
                                    <arg value="registry.gitlab.com/scce/add-lib/crosscompile-windows:${git.branch}"/>
                                    <arg value="make"/>
                                </exec>
                                <copy file="${project.build.directory}/native-windows-build/libaddlib-cudd.dll"
                                      tofile="${project.build.directory}/classes/nativelib/windows/x64/libaddlib-cudd.dll"/>
                            </target>
                        </configuration>
                    </execution>
                    <execution>
                        <id>build-native-macos-library</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <exec executable="id" failonerror="true" outputproperty="docker.userId">
                                    <arg value="-u"/>
                                </exec>
                                <exec executable="id" failonerror="true" outputproperty="docker.groupId">
                                    <arg value="-g"/>
                                </exec>
                                <copy todir="${project.build.directory}/native-macos-build">
                                    <fileset dir="${project.build.directory}/native" includes="**"/>
                                </copy>
                                <exec executable="docker" failonerror="false">
                                    <arg value="pull"/>
                                    <arg value="registry.gitlab.com/scce/add-lib/crosscompile-macos:${git.branch}"/>
                                </exec>
                                <exec executable="docker" failonerror="true">
                                    <arg value="run"/>
                                    <arg value="--rm"/>
                                    <arg value="-v"/>
                                    <arg value="${project.build.directory}/native-macos-build:/workdir"/>
                                    <arg value="-u=${docker.userId}:${docker.groupId}"/>
                                    <arg value="registry.gitlab.com/scce/add-lib/crosscompile-macos:${git.branch}"/>
                                    <arg value="cmake"/>
                                    <arg value="."/>
                                    <arg value="-DCMAKE_SYSTEM_NAME=Darwin"/>
                                </exec>
                                <exec executable="docker" failonerror="true">
                                    <arg value="run"/>
                                    <arg value="--rm"/>
                                    <arg value="-v"/>
                                    <arg value="${project.build.directory}/native-macos-build:/workdir"/>
                                    <arg value="-u=${docker.userId}:${docker.groupId}"/>
                                    <arg value="registry.gitlab.com/scce/add-lib/crosscompile-macos:${git.branch}"/>
                                    <arg value="make"/>
                                </exec>
                                <copy file="${project.build.directory}/native-macos-build/libaddlib-cudd.dylib"
                                      tofile="${project.build.directory}/classes/nativelib/mac/x64/libaddlib-cudd.dylib"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <!-- If we build docker images, make sure to build them before this module -->
            <id>docker</id>
            <dependencies>
                <dependency>
                    <groupId>info.scce</groupId>
                    <artifactId>addlib-docker</artifactId>
                    <type>pom</type>
                    <scope>provided</scope>
                </dependency>
            </dependencies>
        </profile>
    </profiles>
</project>
